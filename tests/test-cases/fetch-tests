#!/bin/sh
#
# Retrieves all of the RDFa APPROVED test cases from teh Interwebs.
echo "Fetching all XHTML test cases for XHTML+RDFa 1.0" 

mkdir -p xhtml1-rdfa1.0
for i in 0001 0006 0007 0008 0009 0010 0012 0013 0014 0015 0018 0019 0020 0021 0023 0025 0026 0027 0029 0030 0031 0032 0033 0034 0035 0036 0037 0038 0041 0046 0047 0048 0049 0050 0051 0052 0053 0054 0055 0056 0057 0058 0059 0060 0061 0062 0063 0064 0065 0066 0067 0068 0069 0070 0071 0072 0073 0074 0075 0076 0077 0078 0079 0080 0081 0082 0083 0084 0087 0088 0089 0090 0091 0093 0099 0106 0107 0108 0109 0110 0111 0112 0113 0114 0115 0117 0118 0119 0120 0121 0140 0147 0172 0173 0174 0181 0197 0207 0209 0210 0211 0212 0215; 
do 
   if [ ! -e xhtml1-rdfa1.0/${i}.xhtml ]; then 
      echo "Retrieving TC #$i"; 
      curl -s --connect-timeout 3 -H "Accept: application/xhtml+xml" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.xhtml > xhtml1-rdfa1.0/${i}.xhtml
      curl -s --connect-timeout 3 -H "Accept: application/sparql-query" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.sparql > xhtml1-rdfa1.0/${i}.sparql
   fi
done

echo "Fetching all XHTML test cases for XHTML+RDFa 1.1"
mkdir -p xhtml1-rdfa1.1
for i in 0049 0050 0052 0053 0060 0066 0175 0176 0177 0186 0187 0188 0189 0190 0206 0214 0218 0219 0220 0221 0222 0223 0224 0225 0226 0227 0228 0229 0232 0233 0259 0260 0265; 
do 
   if [ ! -e xhtml1-rdfa1.1/${i}.xhtml ]; then 
      echo "Retrieving TC #$i"; 
      curl -s --connect-timeout 3 -H "Accept: application/xhtml+xml" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.xhtml > xhtml1-rdfa1.1/${i}.xhtml
      curl -s --connect-timeout 3 -H "Accept: application/sparql-query" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.sparql > xhtml1-rdfa1.1/${i}.sparql
   fi
done
