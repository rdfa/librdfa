#!/bin/sh
#
# Retrieves all of the RDFa APPROVED test cases from teh Interwebs.
echo "Fetching all XHTML test cases for XHTML+RDFa 1.0" 

mkdir -p xhtml1-rdfa1.0
for i in 0001 0006 0007 0008 0009 0010 0012 0013 0014 0015 0017 0018 0019 0020 0021 0023 0025 0026 0027 0029 0030 0031 0032 0033 0034 0035 0036 0037 0038 0039 0040 0041 0042 0046 0047 0048 0049 0050 0051 0052 0053 0054 0055 0056 0057 0058 0059 0060 0061 0062 0063 0064 0065 0066 0067 0068 0069 0070 0071 0072 0073 0074 0075 0076 0077 0078 0079 0080 0081 0082 0083 0084 0085 0087 0088 0089 0090 0091 0093 0099 0104 0106 0107 0108 0109 0110 0111 0112 0113 0114 0115 0117 0118 0119 0120 0121 0122 0126 0131 0134 0140 0147 0172 0173 0174 0181 0197 0201 0202 0203 0207 0209 0210 0211 0212 0215 0258 0262 0291 0294; 
do 
   if [ ! -e xhtml1-rdfa1.0/${i}.xhtml ]; then 
      echo "Retrieving TC #$i"; 
      curl -s --connect-timeout 3 -H "Accept: application/xhtml+xml" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.xhtml > xhtml1-rdfa1.0/${i}.xhtml
      curl -s --connect-timeout 3 -H "Accept: application/sparql-query" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.sparql > xhtml1-rdfa1.0/${i}.sparql
   fi
done

echo "Fetching all XHTML test cases for XHTML+RDFa 1.1"
mkdir -p xhtml1-rdfa1.1

for i in 0001 0006 0007 0008 0009 0010 0012 0013 0014 0015 0017 0018 0019 0020 0021 0023 0025 0026 0027 0029 0030 0031 0032 0033 0034 0035 0036 0037 0038 0039 0041 0048 0049 0050 0051 0052 0053 0054 0055 0056 0057 0059 0060 0061 0062 0063 0064 0065 0066 0067 0068 0069 0070 0071 0072 0073 0074 0075 0076 0077 0079 0080 0083 0084 0085 0087 0088 0089 0091 0093 0099 0104 0106 0107 0108 0109 0110 0111 0112 0113 0114 0115 0117 0118 0119 0120 0121 0122 0126 0131 0134 0140 0147 0172 0173 0174 0175 0176 0177 0178 0179 0180 0181 0182 0183 0186 0187 0188 0189 0190 0196 0197 0198 0201 0202 0203 0206 0207 0213 0214 0216 0217 0218 0219 0220 0221 0222 0223 0224 0225 0226 0227 0228 0229 0230 0231 0232 0233 0234 0235 0236 0237 0238 0239 0246 0247 0248 0249 0250 0251 0252 0253 0254 0255 0256 0257 0258 0259 0260 0261 0262 0263 0264 0265 0266 0267 0268 0269 0269 0271 0272 0273 0274 0275 0276 0277 0278 0279 0280 0281 0282 0283 0284 0285 0286 0287 0289 0290 0291 0292 0293 0295 0296 0297 0298 0299 0300 0301 0302 0303 0304; 
do 
   if [ ! -e xhtml1-rdfa1.1/${i}.xhtml ]; then 
      echo "Retrieving TC #$i"; 
      curl -s --connect-timeout 3 -H "Accept: application/xhtml+xml" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.xhtml > xhtml1-rdfa1.1/${i}.xhtml
      curl -s --connect-timeout 3 -H "Accept: application/sparql-query" http://rdfa.info/test-suite/test-cases/xhtml1/rdfa1.0/${i}.sparql > xhtml1-rdfa1.1/${i}.sparql
   fi
done
